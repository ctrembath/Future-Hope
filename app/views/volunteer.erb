<div class="row">
	<div class="small-12 columns">
		<img id="logo" src="images/logo.jpg">
	</div>
</div>
<div class="row">
	<div class="small-12 columns">
		<h1 id="volunteerheader">Table <% if @number %><%= @number %><% end %></h1>
	</div>
</div>
<div class="row">
	<div class="small-12 columns">
		<div id="new-item">
			<form action='/display' id='auction-list' method='post'>
				Auction Item: 
				<select name="title">
				  <option value="rugby.png">Rugby Program (1 available)</option>
				  <option value="cricket.png">Cricket Program (1 available)</option>
				  <option value="rowing.png">Rowing Program (1 available)</option>
				  <option value="football.png">Football (already sold)</option>
				  <option value="houseparent.png">Home with House-Parent</option>
				  <option value="university.png">3-yr University Course</option>
				  <option value="teacher-year.png">Teacher (1 yr)</option>
				  <option value="child-year.png.">Child Off The Streets (1 yr)</option>
				  <option value="activities.png">Activities</option>
				  <option value="teacher-month.png">Teacher (1 month)</option>
				  <option value="child-month.png">Child Off The Streets (1 month)</option>
				</select>
				Names of pledges given:
				<select id="guest-list" name="names[]" size="10" multiple>
					<% if @all_table_names %>
						<% @all_table_names.each do |guest| %>
					    <option value="<%= guest %>"><%= guest %></option>
					  <% end %>
				  <% end %>
			  </select>	
<!-- 				Total: <input type='text' name='total'>
 -->				<input type='submit' id="submit" value='SUBMIT'>
			</form>
				
			<form method="link" action="/volunteer-table">
			<button type="submit" value="reselect" id="reselect">Reselect Table</input>
		</form>
		</div>
	</div>
</div>
<script>
(function() {
  var selected = {};
  $('#guest-list').click(function(e) {
    var $this = $(this),
      options = this.options,
      option,
      value,
      n;  
      // Find out what option was just added
      value = $this.val();    
      // Re-apply the selections
      for (n = 0; n < options.length; ++n) {
        option = options[n];
        if (option.value == value) {
          // The one being updated
          selected[value] = !selected[value];
         }
        // One of the others
        option.selected = !!selected[option.value];
      }
      return false;
    });
  })();
</script>